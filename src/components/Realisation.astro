---
export interface Props {
  title: string;
  description: string;
  skills: string[];
  media: { type: "image" | "video"; src: string }[];
}

const { title, description, skills, media } = Astro.props;
---

<section class="realisation">
  <h2>{title}</h2>
  <p class="description">{description}</p>
  <ul class="skills">
    {skills.map((skill) => (
      <li>{skill}</li>
    ))}
  </ul>
  <div class="media-container">
    {media.map(({ type, src }) => (
      type === "image"
        ? <img src={src} alt={title} class="media" />
        : <video controls class="media">
            <source src={src} type="video/mp4" />
          </video>
    ))}
  </div>
</section>

<style>
  .realisation {
    background: #fff;
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 30px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 800px;
    text-align: center;
  }

  .realisation h2 {
    font-size: 1.5rem;
    color: #1e1e1e;
    
  }

  .description {
    color: #333;
    font-size: 1rem;
    margin-bottom: 15px;
  }

  .skills {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
  }

  .skills li {
    background: #f3f3f3;
    padding: 5px 10px;
    border-radius: 8px;
    font-size: 0.9rem;
  }

  .media-container {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
    margin-top: 15px;
  }

  .media {
    width: 100%;
    max-width: 400px;
    border-radius: 8px;
    object-fit: cover;
  }
</style>
